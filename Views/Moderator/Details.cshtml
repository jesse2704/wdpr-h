@model wdpr_h.Models.ModeratorViewModel

@{
    Layout = "_Layout";
    var id = ViewData["id"].ToString();
    var hulpverlener = Model.Hulpverleners.Where(h => h.Id == id).Single();
    var hulpverlenerNaam = hulpverlener.Naam;
    //var hulpverlener = Model.Hulpverleners.Where(h => h.Id == id.ToString()).SingleOrDefault();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Clienten in behandeling bij @hulpverlenerNaam</h4>
    <hr />
<table class="table table-striped">
        <thead class="table-primary">
            <tr>
                <th>
                    Naam:
                </th>
                <th>
                    Achternaam:
                </th>
                <th>
                    Email:
                </th>
                <th>
                    Geboortedatum:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clients.Where(c => c.HulpverlenerId == Guid.Parse(id)))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Achternaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Geboortedatum)
                    </td>

                <td>
                        @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                        @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> *@
                        @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                </tr>
            }
        </tbody>
    </table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
