@model wdpr_h.Models.ModeratorViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Moderator overzicht</title>
</head>

<body>
    <table class="table table-striped">
        <thead class="table-primary">
            <tr>
                <th scope="col">
                    Client naam:
                </th>
                <th scope="col">
                    Client Email:
                </th>
                <th scope="col">
                    Wordt geholpen door:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clients.Where(c => c.isKindAccount == true))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @{
                            var uitslag = item.HulpverlenerId;
                            var hulpverlener = Model.Hulpverleners.Where(h => h.Id == uitslag.ToString()).SingleOrDefault();
                        }
                        
                        @hulpverlener.Naam - @hulpverlener.Achternaam
                    </td>
                    @* <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td> *@
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
